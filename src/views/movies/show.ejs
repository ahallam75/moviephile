<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <h1><%= movie.title %></h1>

      <section id="review-form">
        <% if(currentUser && !movie.reviews) { %>
          <% include ../reviews/new.ejs %>
        <% } %>
      </section>

      <section id="review-list">
        <% if(movie.reviews) { %>
          <%- include("../reviews/show.ejs", {movie}) %>
        <% } %>
      </section>

      <hr>
       
      <section>
          <a href="/users/<%= movie.userId %>" class="btn btn btn-sm btn-dark">Back</a>
      </section>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>