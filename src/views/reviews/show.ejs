<% if(movie.reviews) { %>
  <div style="width: 50%">
    <hr>
    <p>
      <%= movie.reviews.body %>
    </p>
    <small class="card-subtitle mb-2 text-muted">
      created on <%= movie.reviews.createdAt %>
    </small>

    <% if(currentUser && currentUser.id === movie.reviews.userId) { %>
      <form style="display:initial"
            action="/users/<%= movie.userId %>/movies/<%= movie.id %>/reviews/<%= movie.reviews.id %>/destroy"
            method="post">
        <button type="submit" class="btn btn btn-sm btn-outline-danger">Delete</button>
      </form>
    <% } %>
    <hr>
  </div>
<% } %>