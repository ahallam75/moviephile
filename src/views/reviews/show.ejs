<% if(review) { %>
    <div style="width: 50%">
      <hr>
      <p>
        <%= review.body %>
      </p>
      <small class="card-subtitle mb-2 text-muted"> 
        created by <%= review.User.email %> on <%= review.createdAt %>
      </small>
 
      <% if(currentUser) { %>
        <form style="display:initial"
              action="/users/<%= movie.userId %>/movies/<%= movie.id %>/reviews/<%= review.id %>/destroy"
              method="post">
          <button type="submit" class="btn btn btn-sm btn-outline-danger">Delete</button>
        </form>
      <% } %>
      <hr>
    </div>
  <% } %>