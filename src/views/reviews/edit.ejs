<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>Edit Review</h1>

      <form action="/users/<%= review.Movie.userId %>/movies/<%= review.Movie.id %>/reviews/<%= review.id %>/update" method="post">
        <div class="form-group">
          <label for="review">Review Body</label>
          <input value="<%= review.body %>" type="text" class="form-control" name="body" aria-describedby="bodyHelp" placeholder="Enter Review">
        </div>
        <div class="form-group">
          <label for="rating">Movie Rating</label>
          <textarea rows="1" class="form-control" name="rating" placeholder="Enter Rating: 1 - 100"><%= review.rating %></textarea>
        </div>
        <button type="submit" class="btn btn-outline-success">Update</button>
      </form>

    <hr>

      <section>
        <a href="/users/<%= review.userId %>/movies/<%= review.movieId %>/show" class="btn btn btn-sm btn-dark">Back</a>
      </section>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
